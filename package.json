{
  "name": "foxgis-server-lite",
  "version": "2.0.0",
  "private": true,
  "bin": "./bin/www",
  "scripts": {
    "start": "node ./bin/www",
    "docs": "docsify serve ./docs --open",
    "test": "yarn lint",
    "lint": "eslint app/**/*.js",
    "format": "prettier-eslint --write app/**/*.js",
    "dist": "pkg . --out-path=dist/ --targets=win,linux,macos"
  },
  "engines": {
    "node": ">=8"
  },
  "pkg": {
    "assets": [
      "node_modules/@mapbox/glyph-pbf-composite/proto/glyphs.proto",
      "app/assets"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "app/**/*.js": [
        "prettier-eslint",
        "git add"
      ]
    },
    "ignore": [
      "app/assets/**/*"
    ]
  },
  "dependencies": {
    "@cgcs2000/mbtiles": "^0.10.3",
    "@mapbox/glyph-pbf-composite": "^0.0.3",
    "compression": "^1.6.2",
    "consolidate": "^0.15.1",
    "cors": "^2.8.1",
    "ejs": "^2.6.1",
    "express": "^4.16.2",
    "morgan": "^1.8.2"
  },
  "devDependencies": {
    "docsify-cli": "^4.2.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.0.1",
    "lint-staged": "^8.0.4",
    "pkg": "^4.3.1",
    "prettier": "^1.12.1",
    "prettier-eslint-cli": "^4.7.1"
  }
}
